{
  "name": "ai-app",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev:server": "cd packages/server && bun run dev",
    "dev:client": "cd packages/client && bun run dev",
    "dev": "concurrently --names \"server,client\" --prefix-colors \"green,cyan\" \"bun run dev:server\" \"bun run dev:client\""
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "dotenv": "^17.2.2"
  }
}
